@page
@model AuthAndAuthroizeRazor.Pages.Account.LoginPage
@{
    ViewData["Title"] = "LoginPage";
}

<h1>@ViewData["Title"]</h1>

<div class="container border" style="padding: 20px;">
    <form method="post">
        <div class="form group row">
           <div class="col-2">
            <label asp-for="Credential.Username"></label>
           </div>
           <div class="col-5">
            <input type="text" asp-for="Credential.Username" class="form-control"/>
           </div>
        </div>
        <div class="form group row">
           <div class="col-2">
            <label asp-for="Credential.Password"></label>
           </div>
           <div class="col-5">
            <input type="text" asp-for="Credential.Password" class="form-control"/>
           </div>
        </div>
        <div class="form group row">
           <div class="col-2">
             <input type="submit" class="btn btn-primary" value="Login"/>
           </div>
           <div class="col-5">
           
           </div>
        </div>
    </form>
</div>